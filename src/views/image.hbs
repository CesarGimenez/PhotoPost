<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{img.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id={{img.filename}}><i class="fas fa-trash"></i></button>
    </div>
    <div class="card-body">
        <img src="../public/uploads/{{img.filename}}" alt="" class="w-100 img-thumbnail">
        <div class="card-footer mt-2">
            <p>{{img.description}}</p>
            <div class="counts d-flex">
                <a class="text-decoration-none" id="btn-like" data-id="{{img.filename}}"><i class="fas fa-heart ml-3 icono"></i></a> 
                <span class="likes-count ml-2"> {{img.likes}}</span>
                <i class="far fa-eye ml-3 icono"></i>
                <span class="views-count ml-2"> {{img.views}}</span>
                <i class="far fa-comment ml-3 icono"></i>
                <span class="ml-2"> {{commentscount}}</span>
            <div class="timeago ml-auto">
                <i class="far fa-clock"></i>
                <span> {{timeago img.timestamp}}</span>
            </div>
            </div>
        </div>
    </div>
</div>
<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3> Comentarios</h3>
        <button class="btn btn-info" id="btn-toggle-comment"><i class="far fa-comments"></i> Publica tu comentario</button>
    </div>
    <div class="card-body">
        <blockquote id="newcomment">
            <form action="/images/{{img.filename}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Ingresa tu nombre">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Ingresa tu email">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="3" class="form-control" placeholder="Excribe tu comentario"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info" id="btn-comment">Publicar comentario</button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
                <li class="list-group-item">
                    <div class="row">
                        <a href="#" class="col text-center"><img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt=""></a>
                        <blockquote class="col">
                            <p class="muted">
                                {{comment}}
                            </p>
                            <footer class="blockquote-footer">{{name}} - {{timeago timestamp}}</footer>
                        </blockquote>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>